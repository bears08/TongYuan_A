<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/head_bg"
    android:gravity="center_vertical" >

    <Button
        android:id="@+id/head_left"
        style="@style/style_15_EBEBEB_BOLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dip"
        android:background="@drawable/new_head_back_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/custom_title_back"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/head_title"
        style="@style/style_18_BEBEBE_BOLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/head_right_car"
        android:layout_alignBottom="@+id/head_right_car"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/head_right_car"
        style="@style/style_15_EBEBEB_BOLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="10dip"
        android:background="@drawable/bar_shopping_normal"
        android:clickable="true"
        android:gravity="center"
        android:visibility="visible" />
<!--         android:background="@drawable/number_bg"-->
    <TextView
        android:id="@+id/textShopCarNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/head_left"
        android:layout_alignBottom="@id/head_left"
        android:layout_alignRight="@id/head_right_car"

        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="7.0dip"
        android:paddingRight="7.0dip"
        android:paddingTop="0.0dip"
        android:text="10"
        android:textColor="#ffffffff"
        android:textSize="10.0sp"
        android:textStyle="bold" />

</RelativeLayout>